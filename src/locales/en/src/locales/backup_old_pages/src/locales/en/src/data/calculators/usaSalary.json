{
  "id": "usaSalary",
  "name": "USA Salary Calculator",
  "description": "Calculate take-home pay in the United States",
  "inputs": [
    {
      "id": "grossSalary",
      "label": "Gross Salary (USD)",
      "type": "number",
      "default": 70000,
      "unit": "$",
      "required": true
    }
  ],
  "outputs": [
    {
      "id": "netSalary",
      "label": "Net Salary",
      "formula": "grossSalary * 0.75",
      "unit": "$"
    }
  ]
}
