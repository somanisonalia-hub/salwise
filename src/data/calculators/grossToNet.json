{
  "id": "grossToNet",
  "name": "Gross to Net Salary Calculator",
  "description": "Convert gross salary to net take-home pay with detailed tax breakdown",
  "inputs": [
    {
      "id": "country",
      "label": "Country",
      "type": "select",
      "default": "IE",
      "options": [
        {"value": "IE", "label": "ðŸ‡®ðŸ‡ª Ireland"},
        {"value": "US", "label": "ðŸ‡ºðŸ‡¸ United States"},
        {"value": "UK", "label": "ðŸ‡¬ðŸ‡§ United Kingdom"},
        {"value": "CA", "label": "ðŸ‡¨ðŸ‡¦ Canada"},
        {"value": "AU", "label": "ðŸ‡¦ðŸ‡º Australia"},
        {"value": "DE", "label": "ðŸ‡©ðŸ‡ª Germany"},
        {"value": "FR", "label": "ðŸ‡«ðŸ‡· France"},
        {"value": "IN", "label": "ðŸ‡®ðŸ‡³ India"},
        {"value": "JP", "label": "ðŸ‡¯ðŸ‡µ Japan"},
        {"value": "SG", "label": "ðŸ‡¸ðŸ‡¬ Singapore"}
      ],
      "required": true,
      "description": "Select your country for accurate tax calculations"
    },
    {
      "id": "grossSalary",
      "label": "Annual Gross Salary",
      "type": "number",
      "default": 75000,
      "unit": "",
      "placeholder": "75000",
      "required": true,
      "min": 0,
      "description": "Your annual gross salary before any deductions"
    },
    {
      "id": "state",
      "label": "State/Province (US/Canada)",
      "type": "select",
      "default": "CA",
      "options": [
        {"value": "CA", "label": "California (13.3%)"},
        {"value": "TX", "label": "Texas (0%)"},
        {"value": "FL", "label": "Florida (0%)"},
        {"value": "NY", "label": "New York (8.82%)"},
        {"value": "IL", "label": "Illinois (4.95%)"},
        {"value": "ON", "label": "Ontario (5.05%)"},
        {"value": "BC", "label": "British Columbia (5.06%)"},
        {"value": "QC", "label": "Quebec (4.95%)"}
      ],
      "required": false,
      "description": "Select your state/province for regional tax calculations",
      "conditional": "country === 'US' || country === 'CA'"
    },
    {
      "id": "filingStatus",
      "label": "Filing Status (US)",
      "type": "select",
      "default": "single",
      "options": [
        {"value": "single", "label": "Single"},
        {"value": "married_joint", "label": "Married Filing Jointly"},
        {"value": "head_household", "label": "Head of Household"}
      ],
      "required": false,
      "description": "Your tax filing status",
      "conditional": "country === 'US'"
    },
    {
      "id": "dependents",
      "label": "Number of Dependents",
      "type": "number",
      "default": 0,
      "unit": "people",
      "placeholder": "0",
      "required": false,
      "min": 0,
      "max": 10,
      "description": "Children and dependents claimed on taxes"
    },
    {
      "id": "retirementContribution",
      "label": "Annual Retirement Contribution",
      "type": "number",
      "default": 0,
      "unit": "",
      "placeholder": "3000",
      "required": false,
      "min": 0,
      "description": "Pre-tax retirement contributions (401k, IRA, pension, etc.)"
    },
    {
      "id": "healthInsurance",
      "label": "Monthly Health Insurance",
      "type": "number",
      "default": 0,
      "unit": "",
      "placeholder": "400",
      "required": false,
      "min": 0,
      "description": "Employer-sponsored health insurance premium (pre-tax)"
    },
    {
      "id": "otherDeductions",
      "label": "Other Pre-Tax Deductions",
      "type": "number",
      "default": 0,
      "unit": "",
      "placeholder": "0",
      "required": false,
      "min": 0,
      "description": "Other pre-tax deductions (commuter benefits, FSA, etc.)"
    }
  ],
  "formula": {
    "annualGross": "grossSalary",
    "totalPreTaxDeductions": "retirementContribution + (healthInsurance * 12) + otherDeductions",
    "taxableIncome": "Math.max(0, annualGross - totalPreTaxDeductions)",
    "federalTax": "country === 'US' ? calculateFederalTax2025(taxableIncome, filingStatus) : calculateCountryTax(taxableIncome, country)",
    "stateTax": "(country === 'US' || country === 'CA') ? calculateStateTax2025(annualGross, state) : 0",
    "socialSecurity": "country === 'US' ? Math.min(annualGross * 0.062, 168600 * 0.062) : 0",
    "medicare": "country === 'US' ? annualGross * 0.0145 + (annualGross > 200000 ? (annualGross - 200000) * 0.009 : 0) : 0",
    "payrollTax": "socialSecurity + medicare",
    "totalTax": "federalTax + stateTax + payrollTax",
    "annualNet": "annualGross - totalTax",
    "monthlyNet": "annualNet / 12",
    "biweeklyNet": "annualNet / 26",
    "weeklyNet": "annualNet / 52",
    "effectiveTaxRate": "annualGross > 0 ? (totalTax / annualGross) * 100 : 0",
    "takeHomePercentage": "annualGross > 0 ? (annualNet / annualGross) * 100 : 0",
    "taxBurden": "totalTax + totalPreTaxDeductions",
    "totalDeductionsPercentage": "annualGross > 0 ? (taxBurden / annualGross) * 100 : 0"
  },
  "outputLabels": {
    "annualGross": "Annual Gross Salary",
    "totalPreTaxDeductions": "Pre-Tax Deductions",
    "taxableIncome": "Taxable Income",
    "federalTax": "Federal/Country Tax",
    "stateTax": "State/Provincial Tax",
    "socialSecurity": "Social Security",
    "medicare": "Medicare",
    "payrollTax": "Total Payroll Taxes",
    "totalTax": "Total Taxes",
    "annualNet": "Annual Take-Home Pay",
    "monthlyNet": "Monthly Take-Home Pay",
    "biweeklyNet": "Biweekly Take-Home Pay",
    "weeklyNet": "Weekly Take-Home Pay",
    "effectiveTaxRate": "Effective Tax Rate",
    "takeHomePercentage": "Take-Home Percentage",
    "taxBurden": "Total Deductions",
    "totalDeductionsPercentage": "Total Deductions Percentage"
  },
  "outputUnits": {
    "annualGross": "",
    "totalPreTaxDeductions": "",
    "taxableIncome": "",
    "federalTax": "",
    "stateTax": "",
    "socialSecurity": "",
    "medicare": "",
    "payrollTax": "",
    "totalTax": "",
    "annualNet": "",
    "monthlyNet": "",
    "biweeklyNet": "",
    "weeklyNet": "",
    "effectiveTaxRate": "%",
    "takeHomePercentage": "%",
    "taxBurden": "",
    "totalDeductionsPercentage": "%"
  }
}
