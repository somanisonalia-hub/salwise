{
  "id": "salaryAfterTaxIreland",
  "name": "Ireland Salary Calculator",
  "description": "Calculate take-home pay in Ireland with income tax, USC, PRSI, and benefits",
  "inputs": [
    {
      "id": "grossSalary",
      "label": "Gross Annual Salary",
      "type": "number",
      "default": 50000,
      "unit": "€",
      "placeholder": "50000",
      "required": true,
      "min": 0,
      "description": "Your annual gross salary before tax"
    },
    {
      "id": "payFrequency",
      "label": "Pay Frequency",
      "type": "select",
      "default": "yearly",
      "options": [
        {"value": "weekly", "label": "Weekly"},
        {"value": "monthly", "label": "Monthly"},
        {"value": "yearly", "label": "Yearly"}
      ],
      "required": true,
      "description": "How often you get paid"
    },
    {
      "id": "taxCredits",
      "label": "Tax Credits",
      "type": "number",
      "default": 3300,
      "unit": "€",
      "placeholder": "3300",
      "required": false,
      "min": 0,
      "description": "Tax credits you're entitled to (standard is €3,300 for most people)"
    },
    {
      "id": "pensionContribution",
      "label": "Pension Contribution",
      "type": "number",
      "default": 0,
      "unit": "€",
      "placeholder": "0",
      "required": false,
      "min": 0,
      "description": "Annual pension or retirement contribution"
    },
    {
      "id": "healthInsurance",
      "label": "Health Insurance",
      "type": "number",
      "default": 0,
      "unit": "€",
      "placeholder": "0",
      "required": false,
      "min": 0,
      "description": "Annual health insurance premium"
    },
    {
      "id": "otherDeductions",
      "label": "Other Deductions",
      "type": "number",
      "default": 0,
      "unit": "€",
      "placeholder": "0",
      "required": false,
      "min": 0,
      "description": "Other deductions (union fees, professional subscriptions, etc.)"
    }
  ],
  "formula": {
    "annualGross": "payFrequency === 'weekly' ? grossSalary * 52 : payFrequency === 'monthly' ? grossSalary * 12 : grossSalary",
    "taxableIncome": "annualGross - pensionContribution",
    "incomeTax": "calculateIrelandIncomeTax(taxableIncome, taxCredits)",
    "usc": "calculateIrelandUSC(annualGross)",
    "prsi": "annualGross * 0.04",
    "totalDeductions": "incomeTax + usc + prsi + pensionContribution + healthInsurance + otherDeductions",
    "netAnnualSalary": "annualGross - totalDeductions",
    "netMonthlySalary": "netAnnualSalary / 12",
    "takeHomePercentage": "(netAnnualSalary / annualGross) * 100",
    "totalTaxPercentage": "((incomeTax + usc + prsi) / annualGross) * 100"
  },
  "outputLabels": {
    "annualGross": "Annual Gross Salary",
    "incomeTax": "Income Tax",
    "usc": "Universal Social Charge (USC)",
    "prsi": "Pay Related Social Insurance (PRSI)",
    "totalDeductions": "Total Deductions",
    "netAnnualSalary": "Net Take-Home Pay (Annual)",
    "netMonthlySalary": "Net Take-Home Pay (Monthly)",
    "takeHomePercentage": "Take-Home Pay Percentage",
    "totalTaxPercentage": "Total Tax Rate"
  },
  "outputUnits": {
    "annualGross": "€",
    "incomeTax": "€",
    "usc": "€",
    "prsi": "€",
    "totalDeductions": "€",
    "netAnnualSalary": "€",
    "netMonthlySalary": "€",
    "takeHomePercentage": "%",
    "totalTaxPercentage": "%"
  }
}

