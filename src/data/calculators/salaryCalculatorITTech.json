{
  "id": "salaryCalculatorITTech",
  "name": "IT / Tech Salary Calculator",
  "description": "Comprehensive salary calculator for IT and tech professionals with equity, benefits, and location adjustments",
  "inputs": [
    {
      "id": "country",
      "label": "Country",
      "type": "select",
      "default": "US",
      "options": [
        {"value": "US", "label": "ðŸ‡ºðŸ‡¸ United States"},
        {"value": "UK", "label": "ðŸ‡¬ðŸ‡§ United Kingdom"},
        {"value": "CA", "label": "ðŸ‡¨ðŸ‡¦ Canada"},
        {"value": "AU", "label": "ðŸ‡¦ðŸ‡º Australia"},
        {"value": "DE", "label": "ðŸ‡©ðŸ‡ª Germany"},
        {"value": "FR", "label": "ðŸ‡«ðŸ‡· France"},
        {"value": "IN", "label": "ðŸ‡®ðŸ‡³ India"},
        {"value": "SG", "label": "ðŸ‡¸ðŸ‡¬ Singapore"},
        {"value": "NL", "label": "ðŸ‡³ðŸ‡± Netherlands"}
      ],
      "required": true,
      "description": "Select your country for accurate tax and cost of living calculations"
    },
    {
      "id": "baseSalary",
      "label": "Annual Base Salary",
      "type": "number",
      "default": 100000,
      "unit": "",
      "placeholder": "100000",
      "required": true,
      "min": 0,
      "description": "Your annual base salary before bonuses and equity"
    },
    {
      "id": "experienceLevel",
      "label": "Experience Level",
      "type": "select",
      "default": "mid",
      "options": [
        {"value": "junior", "label": "Junior (0-3 years)"},
        {"value": "mid", "label": "Mid-Level (3-5 years)"},
        {"value": "senior", "label": "Senior (5-8 years)"},
        {"value": "lead", "label": "Lead/Principal (8+ years)"},
        {"value": "staff", "label": "Staff/Architect (10+ years)"}
      ],
      "required": true,
      "description": "Your experience level affects bonus and equity expectations"
    },
    {
      "id": "roleType",
      "label": "Role Type",
      "type": "select",
      "default": "software-engineer",
      "options": [
        {"value": "software-engineer", "label": "Software Engineer"},
        {"value": "frontend-dev", "label": "Frontend Developer"},
        {"value": "backend-dev", "label": "Backend Developer"},
        {"value": "fullstack-dev", "label": "Full-Stack Developer"},
        {"value": "data-scientist", "label": "Data Scientist"},
        {"value": "data-engineer", "label": "Data Engineer"},
        {"value": "devops-engineer", "label": "DevOps Engineer"},
        {"value": "product-manager", "label": "Product Manager"},
        {"value": "engineering-manager", "label": "Engineering Manager"},
        {"value": "cto", "label": "CTO/Tech Lead"}
      ],
      "required": true,
      "description": "Your specific role affects compensation structure"
    },
    {
      "id": "annualBonus",
      "label": "Expected Annual Bonus",
      "type": "number",
      "default": 15000,
      "unit": "",
      "placeholder": "15000",
      "required": false,
      "min": 0,
      "description": "Expected annual performance bonus"
    },
    {
      "id": "equityValue",
      "label": "Annual Equity/RSU Value",
      "type": "number",
      "default": 25000,
      "unit": "",
      "placeholder": "25000",
      "required": false,
      "min": 0,
      "description": "Estimated annual value of stock options or RSUs"
    },
    {
      "id": "benefitsValue",
      "label": "Annual Benefits Package",
      "type": "number",
      "default": 12000,
      "unit": "",
      "placeholder": "12000",
      "required": false,
      "min": 0,
      "description": "Health insurance, retirement match, paid time off value"
    },
    {
      "id": "remoteWorkStipend",
      "label": "Monthly Remote Work Stipend",
      "type": "number",
      "default": 100,
      "unit": "",
      "placeholder": "100",
      "required": false,
      "min": 0,
      "description": "Monthly stipend for remote work setup"
    },
    {
      "id": "professionalDevelopment",
      "label": "Annual Learning Budget",
      "type": "number",
      "default": 2000,
      "unit": "",
      "placeholder": "2000",
      "required": false,
      "min": 0,
      "description": "Conference, certification, and training budget"
    }
  ],
  "formula": {
    "baseSalary": "baseSalary",
    "bonusAmount": "annualBonus",
    "equityValue": "equityValue",
    "benefitsValue": "benefitsValue",
    "remoteStipend": "remoteWorkStipend * 12",
    "learningBudget": "professionalDevelopment",
    "totalCashCompensation": "baseSalary + bonusAmount + remoteStipend + learningBudget",
    "totalCompensation": "totalCashCompensation + equityValue + benefitsValue",
    "taxableIncome": "totalCashCompensation",
    "estimatedTax": "calculateCountryTax(totalCashCompensation, country)",
    "socialContributions": "country === 'US' ? totalCashCompensation * 0.0765 : country === 'UK' ? totalCashCompensation * 0.08 : country === 'CA' ? totalCashCompensation * 0.0495 : country === 'AU' ? totalCashCompensation * 0.02 : country === 'DE' ? totalCashCompensation * 0.20 : country === 'FR' ? totalCashCompensation * 0.22 : country === 'IN' ? 0 : country === 'SG' ? 0 : country === 'NL' ? totalCashCompensation * 0.08 : 0",
    "totalDeductions": "estimatedTax + socialContributions",
    "annualNetCash": "totalCashCompensation - totalDeductions",
    "monthlyNetCash": "annualNetCash / 12",
    "annualTotalValue": "annualNetCash + equityValue + benefitsValue",
    "monthlyTotalValue": "annualTotalValue / 12",
    "cashPercentage": "totalCompensation > 0 ? (totalCashCompensation / totalCompensation) * 100 : 0",
    "equityPercentage": "totalCompensation > 0 ? (equityValue / totalCompensation) * 100 : 0",
    "benefitsPercentage": "totalCompensation > 0 ? (benefitsValue / totalCompensation) * 100 : 0",
    "effectiveTaxRate": "totalCashCompensation > 0 ? (totalDeductions / totalCashCompensation) * 100 : 0"
  },
  "outputLabels": {
    "baseSalary": "Base Salary",
    "bonusAmount": "Annual Bonus",
    "equityValue": "Equity/RSUs Value",
    "benefitsValue": "Benefits Package",
    "remoteStipend": "Remote Work Stipend",
    "learningBudget": "Learning & Development",
    "totalCashCompensation": "Total Cash Compensation",
    "totalCompensation": "Total Annual Compensation",
    "estimatedTax": "Estimated Taxes",
    "socialContributions": "Social Security/Insurance",
    "totalDeductions": "Total Deductions",
    "annualNetCash": "Annual Net Cash Income",
    "monthlyNetCash": "Monthly Net Cash Income",
    "annualTotalValue": "Annual Total Value",
    "monthlyTotalValue": "Monthly Total Value",
    "cashPercentage": "Cash as % of Total Comp",
    "equityPercentage": "Equity as % of Total Comp",
    "benefitsPercentage": "Benefits as % of Total Comp",
    "effectiveTaxRate": "Effective Tax Rate"
  },
  "outputUnits": {
    "baseSalary": "",
    "bonusAmount": "",
    "equityValue": "",
    "benefitsValue": "",
    "remoteStipend": "",
    "learningBudget": "",
    "totalCashCompensation": "",
    "totalCompensation": "",
    "estimatedTax": "",
    "socialContributions": "",
    "totalDeductions": "",
    "annualNetCash": "",
    "monthlyNetCash": "",
    "annualTotalValue": "",
    "monthlyTotalValue": "",
    "cashPercentage": "%",
    "equityPercentage": "%",
    "benefitsPercentage": "%",
    "effectiveTaxRate": "%"
  }
}

